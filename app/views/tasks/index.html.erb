<h2>Tasks</h2 >

<table class = "table table-striped">
  <thead>
    <tr>
      <th>Τίτλος</th>
      <th>Project</th>
      <th>Εώς ημερομηνία</th>
      <th>Ημερομηνία δημιουργίας</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.title, task, remote: true %></td>
        <td><%= link_to task.project.description, task, remote: true if !task.project.nil? %></td>
        <td><%= link_to task.due_date.strftime("%d/%m/%Y"), task, remote: true %></td>
        <td><%= link_to task.created_at.strftime("%d/%m/%Y"), task, remote: true %></td>
        <td><%= link_to 'Επεξεργασία', edit_task_path(task), {class: "btn btn-primary"} %></td>
        <td><%= link_to 'Διαγραφή', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @tasks, renderer: BootstrapPagination::Rails %>
<br>
<div class="modal fade" id="modal">
</div>
